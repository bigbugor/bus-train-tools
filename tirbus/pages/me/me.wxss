.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #3399FF;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  
  box-sizing: border-box;
} 
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #FFFFFF;
  padding-bottom: 20rpx;
}
