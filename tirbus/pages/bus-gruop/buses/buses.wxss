/* pages/buses/buses.wxss */

.bus-view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  /* width: 680rpx; */
  margin: 20rpx;
  height: 100rpx;
  padding: 20rpx;
  font-size: 30rpx;
  /* border-bottom: 1rpx solid #CCCCCC;  */
  border-bottom: solid 1px #ccc;
  background-color: #fff;
}

.bus-list-content {
  margin-top: 80rpx;
  /* height: 1050rpx; */
  width: 100%;
  /* border: solid 1px red;    *//* overflow: scroll; */
  /* background-color: #eee; */
}

.title-date {
  width: 280rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  /* line-height: 80rpx; */
  color: #fff;
  text-align: center;
  background-color: #39f;
  border-radius: 10rpx;
}
.title-date-unshow{
  color: #CCCCCC;
}


.title-date-center {
  width: 320rpx;
  color: #39f;
  background-color: #fff;
}

.title-content {
  z-index: 100;
  top: 0;
  position: fixed;
  justify-content: center;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  background-color: #39f;
  /* border: solid 1px red; */
}

.bus-view-left {
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  width: 200rpx;
  /* border-right: 1rpx solid #CCCCCC;  */
}

.bus-view-right {
  width: 300rpx;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  /* border: 1rpx solid #CCCCCC; */
}

.bus-view-right-item {
  text-align: center;
  margin: 5rpx;
}

.bus-view-hover {
  background-color: #DDDDDD;
}
